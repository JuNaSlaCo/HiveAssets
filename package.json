{
  "name": "hiveassets",
  "version": "0.5.4",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --p always"
  },
  "keywords": [],
  "author": "JuNaSlaCo",
  "license": "GPL-3.0-only",
  "description": "HiveAssets",
  "devDependencies": {
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.junaslaco.hiveassets",
    "productName": "HiveAssets",
    "copyright": "Â© 2025 JuNaSlaCo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{test,docs,example}",
      "!dist/**/*",
      "node_modules/ffmpeg-static/**/*"
    ],
    "extraResources": [
      {
        "from": "bottle_server/dist/HASRV.exe",
        "to": "bottle_server/HASRV.exe"
      },
      {
        "from": "build_assets/icon.png",
        "to": "icon.png"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "JuNaSlaCo",
        "repo": "HiveAssets"
      }
    ],
    "win": {
      "icon": "build_assets/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "include": "build_assets/installer.nsh"
    },
    "mac": {
      "icon": "build_assets/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "build_assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "electron-log": "^5.3.3",
    "electron-updater": "^6.6.2",
    "ffmpeg-static": "^5.2.0",
    "tree-kill": "^1.2.2"
  }
}
