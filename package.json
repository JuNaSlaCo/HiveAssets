{
  "name": "electron",
  "version": "0.1.2",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --p always"
  },
  "keywords": [],
  "author": "JuNaSlaCo",
  "license": "ISC",
  "description": "HiveAssets",
  "devDependencies": {
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.junaslaco.hiveassets",
    "productName": "HiveAssets",
    "copyright": "Â© 2025 JuNaSlaCo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{test,docs,example}",
      "!dist/**/*"
    ],
    "extraResources": [
      {
        "from": "bottle_server/dist/server.exe",
        "to": "bottle_server/server.exe"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "JuNaSlaCo",
        "repo": "HiveAssets"
      }
    ],
    "win": {
      "icon": "build_data/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "include": "build_data/installer.nsh",
    },
    "mac": {
      "icon": "build_data/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "build_data/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
